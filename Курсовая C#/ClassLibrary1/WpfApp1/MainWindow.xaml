<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <ImageBrush x:Key="RBrush" TileMode="Tile" ViewportUnits="Absolute"
                    Viewport="0 0 32 32" Opacity="0.3"
                    ImageSource="/РАНХИГС.png"/>
    </Window.Resources>
    <StackPanel>
        <Button Height="120" 
                Background="{StaticResource ResourceKey=RBrush}" 
                Margin="5" FontSize="14">РАНХИГС</Button>
        <Button Height="50">
            <Button.Resources>
                <ImageBrush x:Key="RBrush" TileMode="Tile" ViewportUnits="Absolute"
                    Viewport="0 0 100 50" Opacity="1"
                    ImageSource="/РАНХИГС.png"/>
            </Button.Resources>
            <Button.Background>
                <StaticResource ResourceKey="RBrush"/>
            </Button.Background>
        </Button>
        <Button Margin="5" Content="Кнопка с динамическим ресурсом"
                Background="{DynamicResource RBrush}"/>
        
    </StackPanel>
</Window>
